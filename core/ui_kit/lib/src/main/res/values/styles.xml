<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- region Text BEGIN -->
    <style name="WizCam.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mainButtonsForeground</item>
    </style>

    <style name="WizCam.TextStyle.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WizCam.TextStyle.SingleLine.Normal">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="WizCam.TextStyle.SingleLine.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>
    <!-- endregion Text END -->

    <!-- region Buttons BEGIN -->
    <style name="WizCam.FilterMode.Button" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:tint">@color/color_main_button</item>
    </style>

    <style name="WizCam.FilterMode.Button.Selected">
        <item name="android:background">@drawable/bcg_filter_mode_button</item>
    </style>

    <style name="WizCam.TextStyle.SingleLine.Small.SettingsButton">
        <item name="android:background">@drawable/bcg_main_button_settings</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WizCam.RoundButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/toolButtonSizeNormal</item>
        <item name="android:layout_height">@dimen/toolButtonSizeNormal</item>
        <item name="android:tint">@color/color_main_button</item>
        <item name="android:background">@drawable/bcg_main_button</item>
    </style>

    <style name="WizCam.RoundButton.Large">
        <item name="android:layout_width">@dimen/toolButtonSizeLarge</item>
        <item name="android:layout_height">@dimen/toolButtonSizeLarge</item>
    </style>
    <!-- endregion Buttons END -->

    <style name="WizCam.TextStyle.SingleLine.Normal.Camera">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:background">@drawable/bcg_main_text</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="WizCam.TextStyle.SingleLine.Normal.Camera.WithoutBackground">
        <item name="android:background">@null</item>
    </style>
</resources>