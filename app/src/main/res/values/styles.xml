<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- region Text BEGIN -->
    <style name="Common.Base.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mainButtonsForeground</item>
    </style>

    <style name="Common.Base.TextStyle.SingleLine" parent="Common.Base.TextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextNormal.Light.SingleLine" parent="Common.Base.TextStyle.SingleLine">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="TextSmall.Light.SingleLine" parent="Common.Base.TextStyle.SingleLine">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="CameraTextLabel" parent="TextNormal.Light.SingleLine">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:background">@drawable/bcg_main_text</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CameraTextLabel.WithoutBackground" parent="CameraTextLabel">
        <item name="android:background">@null</item>
    </style>
    <!-- endregion Text END -->

    <!-- region FilterMode BEGIN -->
    <style name="FilterMode.Button" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:tint">@color/color_main_button</item>
    </style>

    <style name="FilterMode.Button.Selected" parent="FilterMode.Button">
        <item name="android:background">@drawable/bcg_filter_mode_button</item>
    </style>
    <!-- endregion FilterMode END -->

    <style name="Settings.Button" parent="TextSmall.Light.SingleLine">
        <item name="android:background">@drawable/bcg_main_button_settings</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
