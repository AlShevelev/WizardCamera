<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/main_buttons_background_pressed" />
            <stroke android:color="@color/main_buttons_foreground" android:width="@dimen/stroke_width_normal" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/main_buttons_background" />
            <stroke android:color="@color/main_buttons_foreground" android:width="@dimen/stroke_width_normal" />
        </shape>
    </item>
</selector>