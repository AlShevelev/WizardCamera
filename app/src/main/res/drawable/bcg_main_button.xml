<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/mainButtonsBackgroundPressed" />
            <stroke android:color="@color/mainButtonsForeground" android:width="@dimen/strokeWidthNormal" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/mainButtonsBackgroundPressed" />
            <stroke android:color="@color/mainButtonsForeground" android:width="@dimen/strokeWidthNormal" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/mainButtonsBackground" />
            <stroke android:color="@color/mainButtonsBackgroundDisabled" android:width="@dimen/strokeWidthNormal" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/mainButtonsBackground" />
            <stroke android:color="@color/mainButtonsForeground" android:width="@dimen/strokeWidthNormal" />
        </shape>
    </item>
</selector>