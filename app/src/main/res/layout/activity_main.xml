<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:background="#EA00FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_normal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"

        tools:text="Original"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/main_buttons_foreground"
        android:singleLine="true"
        android:ellipsize="end"

        android:background="@drawable/bcg_main_text"
        />

    <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"

            android:layout_gravity="end|top"

            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"

            android:background="@drawable/bcg_main_button"
            android:src="@drawable/ic_settings"
            tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="52dp">

        <ImageButton
            android:id="@+id/flashButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"

            android:layout_gravity="center_vertical"

            android:layout_marginEnd="@dimen/main_buttons_margin"

            android:background="@drawable/bcg_main_button"
            android:src="@drawable/ic_flash"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/flipCameraButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"

            android:layout_gravity="center_vertical"

            android:layout_marginEnd="@dimen/main_buttons_margin"

            android:background="@drawable/bcg_main_button"
            android:src="@drawable/ic_flip_camera"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/shootButton"
            android:layout_width="@dimen/tool_button_size_large"
            android:layout_height="@dimen/tool_button_size_large"

            android:layout_marginEnd="@dimen/main_buttons_margin"

            android:background="@drawable/bcg_main_button"
            android:src="@drawable/ic_camera"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/filtersButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"

            android:layout_gravity="center_vertical"

            android:layout_marginEnd="@dimen/main_buttons_margin"

            android:background="@drawable/bcg_main_button"
            android:src="@drawable/ic_filters"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="@dimen/main_button_size"
            android:layout_height="@dimen/main_button_size"

            android:layout_gravity="center_vertical"

            android:background="@drawable/bcg_main_button"
            android:src="@drawable/ic_gallery"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</FrameLayout>
