                android:layout_height="@dimen/mainSettingsMappingTextureSize"

                android:src="@drawable/img_mapping_tex4_small"
                tools:ignore="ContentDescription"
                />
            <ImageView
                android:id="@+id/mappingTex5"
                android:layout_width="@dimen/mainSettingsMappingTextureSize"
                android:layout_height="@dimen/mainSettingsMappingTextureSize"

                android:src="@drawable/img_mapping_tex5_small"
                tools:ignore="ContentDescription"
                />
            <ImageView
                android:id="@+id/mappingTex6"
                android:layout_width="@dimen/mainSettingsMappingTextureSize"
                android:layout_height="@dimen/mainSettingsMappingTextureSize"

                android:src="@drawable/img_mapping_tex6_small"
                tools:ignore="ContentDescription"
                />
            <ImageView
                android:id="@+id/mappingTex7"
                android:layout_width="@dimen/mainSettingsMappingTextureSize"
                android:layout_height="@dimen/mainSettingsMappingTextureSize"

                android:src="@drawable/img_mapping_tex7_small"
                tools:ignore="ContentDescription"
                />
            <ImageView
                android:id="@+id/mappingTex8"
