<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@drawable/bcg_main_settings"
    android:orientation="vertical">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tool:text = "Edge Detection settings"

        style="@style/CameraTextLabel.WithoutBackground"

        android:layout_gravity="top|center_horizontal"

        android:layout_margin="@dimen/mainSettingsCorner"
    />

    <FrameLayout
        android:id="@+id/settingsContainer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tool:layout_height="match_parent"

        android:layout_marginStart="@dimen/mainSettingsCorner"
        android:layout_marginEnd="@dimen/mainSettingsCorner"
        android:layout_marginBottom="@dimen/mainSettingsCorner"
        />
</LinearLayout>